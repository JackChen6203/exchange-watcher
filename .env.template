# ==============================================
# Crypto Exchange Monitor - 環境變數配置範本
# ==============================================

# 交易所 API 配置 (必須設定)
API_KEY=your_bitget_api_key_here
API_SECRET=your_bitget_api_secret_here
API_PASSPHRASE=your_bitget_api_passphrase_here

# Discord Webhook 配置 (必須設定)
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_WEBHOOK_ID/YOUR_WEBHOOK_TOKEN

# 專用持倉變動 Discord Webhook (可選，未設定將使用主要webhook)
DISCORD_POSITION_WEBHOOK_URL=https://discord.com/api/webhooks/YOUR_POSITION_WEBHOOK_ID/YOUR_POSITION_WEBHOOK_TOKEN

# 監控閾值配置 (可選，有預設值)
PRICE_CHANGE_THRESHOLD=10
POSITION_CHANGE_THRESHOLD=10
FUNDING_RATE_HIGH_THRESHOLD=0.1
FUNDING_RATE_LOW_THRESHOLD=-0.1
UPDATE_INTERVAL=5000

# 日誌配置 (可選)
LOG_LEVEL=info
LOG_FILE=./logs/monitor.log
VERBOSE_LOGGING=false

# API URLs (可選，有預設值)
BITGET_BASE_URL=https://api.bitget.com
BITGET_WS_URL=wss://ws.bitget.com/spot/v1/stream
BITGET_CONTRACT_WS_URL=wss://ws.bitget.com/mix/v1/stream
BITGET_CONTRACT_REST_URL=https://api.bitget.com/api/v2/mix/market/contracts

# Discord 顯示圖示 URLs (可選，有預設值)
DISCORD_CHART_ICON_URL=https://cdn.jsdelivr.net/gh/twitter/twemoji@14.0.2/assets/72x72/1f4c8.png
DISCORD_MONEY_ICON_URL=https://cdn.jsdelivr.net/gh/twitter/twemoji@14.0.2/assets/72x72/1f4b0.png
DISCORD_CLOCK_ICON_URL=https://cdn.jsdelivr.net/gh/twitter/twemoji@14.0.2/assets/72x72/23f0.png
DISCORD_SETTINGS_ICON_URL=https://cdn.jsdelivr.net/gh/twitter/twemoji@14.0.2/assets/72x72/2699.png
