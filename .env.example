# 加密貨幣交易所監控系統環境變數配置

# Bitget API 配置
BITGET_API_KEY=your_bitget_api_key
BITGET_SECRET_KEY=your_bitget_api_secret  
BITGET_PASSPHRASE=your_bitget_api_passphrase
# 兼容舊格式
API_KEY=your_bitget_api_key
API_SECRET=your_bitget_api_secret  
API_PASSPHRASE=your_bitget_api_passphrase

# Discord Webhook 配置
DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/your_webhook_id/your_webhook_token

# Discord 專用頻道 Webhook (可選)
DISCORD_POSITION_WEBHOOK_URL=https://discord.com/api/webhooks/position_channel_id/token
FUNDING_RATE_WEBHOOK_URL=https://discord.com/api/webhooks/funding_rate_channel_id/token
PRICE_ALERT_WEBHOOK_URL=https://discord.com/api/webhooks/price_alert_channel_id/token

# 監控閾值配置
PRICE_CHANGE_THRESHOLD=10
POSITION_CHANGE_THRESHOLD=10
FUNDING_RATE_HIGH_THRESHOLD=0.1
FUNDING_RATE_LOW_THRESHOLD=-0.1

# 系統配置
NODE_ENV=production
LOG_LEVEL=info
UPDATE_INTERVAL=5000
TZ=Asia/Shanghai

# Bitget API 端點 (通常不需要修改)
BITGET_BASE_URL=https://api.bitget.com
BITGET_WS_URL=wss://ws.bitget.com/spot/v1/stream
BITGET_CONTRACT_WS_URL=wss://ws.bitget.com/mix/v1/stream
BITGET_CONTRACT_REST_URL=https://api.bitget.com/api/v2/mix/market/contracts